---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Improve your team's communication and productivity with our AI-powered text analysis tool for Slack. Our app provides features like automatic summarization, sentiment analysis, and keyword extraction to help you get the most out of your conversations. Try it now and see the difference for yourself!"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header title={title} />
    <slot />
    <Footer />
  </body>
</html>
